#!/usr/bin/env ruby
require_relative '../lib/laptop'

laptop = Laptop.new
name = laptop.name
price = laptop.price
review = laptop.review

(0...price.size).each do |index|
  puts "---- Laptop: #{index + 1} ---- "
  puts "Laptop spec: #{name[index]} | Price ==> #{price[index]}"
  puts " Stars received: #{review[index]} ---"
end
