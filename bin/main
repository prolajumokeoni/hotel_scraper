#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/laptop'

laptop = Laptop.new
name = laptop.name
price = laptop.price
review = laptop.review

(0...price.size).each do |index|
  puts "--- Laptop: #{index + 1} --- "
  puts "Laptop spec: #{name[index]} | Current price ==> #{price[index]}"
  puts "--- Stars received from reviewers: #{review[index]} ---"
end
